<%- include ./header.ejs %>

<h1 class="text-center">add a new game</h1>
<form class="col-lg-6 mx-auto" action="/games" method="POST">
    <div class="form-group">
            <input type="text" name = "gameName"  placeholder = "game name" class="form-control" required></div>
    <div class="form-group">        
            <input type="text" name = "image" placeholder = "image url" class="form-control" required></div>
    <div class="form-group">       
            <input type="number"  step="0.10" name = "price" placeholder = "price" class="form-control" required></div>
    <div class="form-group">        
                    <select name="category" class="form-control" required>
                            <option selected>Select category</option>
                            <option value="ps4">PS4</option>
                            <option value="xbox-one">XBOX ONE</option>
                            <option value="switch">SWITCH</option>
                    </select></div> 
    <div class="form-group">        
            <select name="genre" class="form-control" required>
                    <option selected>Select genre</option>
                    <option value="role-playing">Role Playing</option>
                    <option value="adventure">Adventure</option>
                    <option value="action">Action</option>
                    <option value="sports">Sports</option>
                    <option value="fps">FPS</option>
            </select></div>                 
          
    <div class="form-group">
                        Release date: <input type="date" name="releaseDate" class="form-control"></div> 
                     
    <div class="form-group"> 
        <textarea rows="10" cols="70" type="textaera" name = "description"  placeholder = "game description" class="form-control"></textarea></div> 
            <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>

